{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "West US",
      "allowedValues": [
        "Brazil South",
        "East Asia",
        "East US",
        "Japan East",
        "Japan West",
        "North Central US",
        "North Europe",
        "South Central US",
        "West Europe",
        "West US",
        "Southeast Asia",
        "Central US",
        "East US 2"
      ],
      "metadata": {
        "description": "Network Security Group Deployment Location"
      }
    },
    "computeApiVersion": {
      "type": "string",
      "defaultValue": "2015-06-15",
      "metadata": {
        "description": "API Version for the Compute Resources"
      }
    },
    "tag": {
      "type": "object",
      "defaultValue": {
        "key1": "virtualmachine",
        "value1": "mariaDB"
      },
      "metadata": {
        "description": "Tag Values"
      }
    },
    "vmNamePrefix": {
      "type": "string",
      "defaultValue": "mdbec",
      "metadata": {
        "description": "Virtual Machine Name"
      }
    },
     "vmSize": {
      "type": "string",
      "defaultValue": "Standard_DS2",
      "metadata": {
        "description": "size for the data node VMs"
      }
    },
    "diskSize": {
      "type": "string",
      "defaultValue": "128",
      "metadata": {
        "description": "Disk size for the data node VMs"
      }
    },
    "maxscaleVmSize": {
      "type": "string",
      "defaultValue": "Standard_A2",
      "metadata": {
        "description": "size for the MaxScale VM"
      }
    },
    "adminUsername": {
      "type": "string",
      "defaultValue": "sysgain",
      "metadata": {
        "description": "Admin Username of Virtual Machine to SSH or RDP"
      }
    },
    "sshKey":{
      "type":"string"
    },
    "imagePublisher": {
      "type": "string",
      "defaultValue": "mariadb",
      "metadata": {
        "description": "Virtual Machine Image Publisher"
      }
    },
    "imageOffer": {
      "type": "string",
      "defaultValue": "mdbec-ha-node",
      "metadata": {
        "description": "Virtual Machine Image Offer"
      }
    },
    "imageSKU": {
      "type": "string",
      "defaultValue": "mdbec-data-node",
      "metadata": {
        "description": "Virtual Machine Image SKU"
      }
    },
    "imageVersion": {
      "type": "string",
      "defaultValue": "latest",
      "metadata": {
        "description": "Virtual Machine Image Version"
      }
    },
    "nodeCount":{
      "type":"int",
      "defaultValue": 3
    },
    "maxscaleCount":{
      "type":"int",
      "defaultValue": 2
    }
   
  },
  "variables": {

    "mdbec-avset":"[concat(parameters('vmNamePrefix'),'-avset1')]",
    "maxscale-avset":"[concat(parameters('vmNamePrefix'),'-avset2')]",
    "storageAccountName":"[concat(parameters('vmNamePrefix'),'sa1')]",
    "maxscaleStorageAccountName":"[concat(parameters('vmNamePrefix'),'sa2')]"
    },
  "resources": [
    {
      "apiVersion": "[parameters('computeApiVersion')]",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[concat(parameters('vmNamePrefix'), '-db', copyIndex(1))]",
      "location": "[parameters('location')]",
      "copy": {
        "name": "vmLoop",
        "count": "[parameters('nodeCount')]"
      },
      "tags": {
        "[parameters('tag').key1]": "[parameters('tag').value1]"
      },
      "plan":{
        "publisher": "[parameters('imagePublisher')]",
        "product": "[parameters('imageOffer')]",
        "name": "[parameters('imageSKU')]"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize')]"
        },
        "availabilitySet": {
          "id": "[resourceId('Microsoft.Compute/availabilitySets', variables('mdbec-avset'))]"
        },
        "osProfile": {
          "computerName": "[concat(parameters('vmNamePrefix'), '-db', copyIndex(1))]",
          "adminUsername": "[parameters('adminUsername')]",
          "linuxConfiguration": {
            "disablePasswordAuthentication": true,
            "ssh": {
              "publicKeys": [
                {
                  "path": "[concat('/home/',parameters('adminUserName'),'/.ssh/authorized_keys')]",
                  "keyData": "[parameters('sshKey')]"
                }
              ]
            }
          }
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[parameters('imagePublisher')]",
            "offer": "[parameters('imageOffer')]",
            "sku": "[parameters('imageSKU')]",
            "version": "[parameters('imageVersion')]"
          },
          "osDisk": {
            "name": "osdisk",
            "vhd": {
              "uri": "[concat('https://',variables('storageAccountName'),'.blob.core.windows.net/','/',parameters('vmNamePrefix'),'-db',copyIndex(1),'vhds/osdisk.vhd')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          },
          "dataDisks": [
            {
              "name": "datadisk1",
              "diskSizeGB": "[parameters('diskSize')]",
              "lun": 0,
              "vhd": {
                "uri": "[concat('http://',variables('storageAccountName'),'.blob.core.windows.net/',parameters('vmNamePrefix'),'-db',copyIndex(1),'vhds/','dataDisk1.vhd')]"
              },
              "createOption": "Empty"
            }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',concat(parameters('vmNamePrefix'), '-db', copyIndex(1)))]"
            }
          ]
        }
      }
    },
    {
      "name": "[concat(parameters('vmNamePrefix'), '-max', copyIndex(1))]",
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "[parameters('computeApiVersion')]",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "vmLoop",
        "count": "[parameters('maxscaleCount')]"
      },
      "tags": {
        "[parameters('tag').key1]": "[parameters('tag').value1]"
      },
      "plan":{
        "publisher": "[parameters('imagePublisher')]",
        "product": "[parameters('imageOffer')]",
        "name": "[parameters('imageSKU')]"
      },
      "properties": {
        "availabilitySet": {
          "id": "[resourceId('Microsoft.Compute/availabilitySets', variables('maxscale-avset'))]"
        },
        "hardwareProfile": {
          "vmSize": "[parameters('maxscaleVmSize')]"
        },
        "osProfile": {
          "computername": "[concat(parameters('vmNamePrefix'), '-max', copyIndex(1)) ]",
          "adminUsername": "[parameters('adminUserName')]",
          "linuxConfiguration": {
            "disablePasswordAuthentication": true,
            "ssh": {
              "publicKeys": [
                {
                  "path": "[concat('/home/',parameters('adminUserName'),'/.ssh/authorized_keys')]",
                  "keyData": "[parameters('sshKey')]"
                }
              ]
            }
          }
        },
        "storageProfile": {
           "imageReference": {
            "publisher": "[parameters('imagePublisher')]",
            "offer": "[parameters('imageOffer')]",
            "sku": "[parameters('imageSKU')]",
            "version": "[parameters('imageVersion')]"
          },
          "osDisk": {
            "name": "osdisk",
            "vhd": {
               "uri": "[concat('http://',variables( 'maxscaleStorageAccountName'),'.blob.core.windows.net/',parameters('vmNamePrefix'),'-max',copyIndex(1),'vhds/','osdisk.vhd')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',concat(parameters('vmNamePrefix'), '-maxscale', copyIndex(1)))]"
            }
          ]
        }
      }
    }
  ]
}