{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "East US",
      "allowedValues": [
        "Brazil South",
        "East Asia",
        "East US",
        "Japan East",
        "Japan West",
        "North Central US",
        "North Europe",
        "South Central US",
        "West Europe",
        "West US",
        "Southeast Asia",
        "Central US",
        "East US 2"
      ],
      "metadata": {
        "description": "Public IP Deployment Location"
      }
    },
    "networkApiVersion": {
      "type": "string",
      "defaultValue": "2015-06-15",
      "metadata": {
        "description": "API Version for the Network Resources"
      }
    },
    "publicIPAddressName": {
      "type": "string",
      "defaultValue": "publicIPAddress",
      "metadata": {
        "description": "Public IP Address Name"
      }
    },
    "tag": {
      "type": "object",
      "defaultValue": {
        "key1": "publicIP",
        "value1": "MariaDB"
      },
      "metadata": {
        "description": "Tag Values"
      }
    },
    "publicIPdnsPrefix": {
      "type": "string",
      "defaultValue": "publicdnsprefix",
      "metadata": {
        "description": "Public IP DNS Prefix"
      }
    },
    "publicIPAllocationType":{
        "type":"string",
        "defaultValue":"Dynamic"
    }
  },
  "variables": {},
  "resources": [
    {
      "apiVersion": "[parameters('networkApiVersion')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[parameters('publicIPAddressName')]",
      "location": "[parameters('location')]",
      "tags": {
        "[parameters('tag').key1]": "[parameters('tag').value1]"
      },
      "properties": {
        "publicIPAllocationMethod":  "[parameters('publicIPAllocationType')]",
        "dnsSettings": {
          "domainNameLabel": "[parameters('publicIPdnsPrefix')]"
        }
      }
    }
  ]
}
