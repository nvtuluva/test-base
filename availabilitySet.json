{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "availabilitySetName": {
      "type": "string",
      "metadata": {
        "description": "Availability Set Name"
      }
    },
    "availabilitySets-api-version": {
      "type": "string",
      "defaultValue": "2015-06-15",
      "metadata": {
        "description": "API Version for the Availability Set"
      }
    },
    "count": {
      "type": "int",
      "defaultValue": 2
    },
    "location": {
      "type": "string",
      "defaultValue": "East US",
      "allowedValues": [
        "Brazil South",
        "East Asia",
        "East US",
        "Japan East",
        "Japan West",
        "North Central US",
        "North Europe",
        "South Central US",
        "West Europe",
        "West US",
        "Southeast Asia",
        "Central US",
        "East US 2"
      ],
      "metadata": {
        "description": "Availability Set Deployment Location"
      }
    },
    "tag": {
      "type": "object",
      "defaultValue": {
        "key1": "AvailabilitySet",
        "value1": "MariaDB"
      },
      "metadata": {
        "description": "Tag Values"
      }
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.Compute/availabilitySets",
      "name": "[concat(parameters('availabilitySetName'),copyIndex(1))]",
      "apiVersion": "[parameters('availabilitySets-api-version')]",
      "location": "[parameters('location')]",
      "tags": {
        "[parameters('tag').key1]": "[parameters('tag').value1]"
      },
      "copy": {
        "name": "availabilitySets",
        "count": "[parameters('count')]"
      },
      "properties": {}
    }
  ]
}
