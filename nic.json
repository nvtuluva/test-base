{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "West US",
      "allowedValues": [
        "Brazil South",
        "East Asia",
        "East US",
        "Japan East",
        "Japan West",
        "North Central US",
        "North Europe",
        "South Central US",
        "West Europe",
        "West US",
        "Southeast Asia",
        "Central US",
        "East US 2"
      ],
      "metadata": {
        "description": "Network Interface Deployment Location"
      }
    },
    "networkApiVersion": {
      "type": "string",
      "defaultValue": "2015-06-15",
      "metadata": {
        "description": "API Version for the Network Interface Card"
      }
    },
    "subnet1Name": {
      "type": "string",
      "defaultValue": "subnet1",
      "metadata": {
        "description": "Subnet Name"
      }
    },
        "vnetName": {
      "type": "string",
      "defaultValue": "virtualNetwork",
      "metadata": {
        "description": "Virtual Network Name"
      }
    },
    "tag": {
      "type": "object",
      "defaultValue": {
        "key1": "Network Interface",
        "value1": "MariaDB"
      },
      "metadata": {
        "description": "Tag Values"
      }
    },
     "vmNamePrefix": {
      "type": "string",
      "defaultValue": "mdbec",
      "metadata": {
        "description": "host name prefix for the VMs"
      }
    },
    "loadBalancerName": {
      "type": "string",
      "metadata": {
        "description": "Load Balancer Name"
      }
    },
    "nodeCount":{
      "type": "int",
      "defaultValue": 3
    },
    "maxscaleCount":{
      "type": "int",
      "defaultValue": 2
    }
  },
  "variables": {
     "dbSubnetRef": "[concat(resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName')),'/subnets/',parameters('subnet1Name'))]",
     "ipDb1": "10.0.1.4",
     "ipDb2": "10.0.1.5",
     "ipDb3": "10.0.1.6",
     "ipMax1": "10.0.1.11",
     "ipMax2": "10.0.1.12"
   },
  "resources": [
    {
      "apiVersion": "[parameters('networkApiVersion')]",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[concat(parameters('vmNamePrefix'), '-db', copyIndex(1))]",
      "location": "[parameters('location')]",
      "copy": {
        "name":"nicLoop",
        "count": "[parameters('nodeCount')]"
      },
       "properties": {
        "ipConfigurations": [
          {
            "name": "[concat('ipconfig', copyIndex(1))]",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[variables(concat('ipDb', copyIndex(1)))]",
              "subnet": {
                "id": "[variables('dbSubnetRef')]"
              }
            }
          }
        ]
      } 
    },
    {
      "apiVersion": "[parameters('networkApiVersion')]",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[concat(parameters('vmNamePrefix'), 'max', copyIndex(1))]",
      "location": "[parameters('location')]",
      "copy": {
        "name": "nicLoop",
        "count": "[parameters('maxscaleCount')]"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "[concat('ipconfig', copyIndex(1))]",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[variables(concat('ipMax', copyIndex(1)))]",
              "subnet": {
                "id": "[variables('dbSubnetRef')]"
              },
              "loadBalancerBackendAddressPools": [
                {
                  "id": "[concat(resourceId('Microsoft.Network/loadBalancers', parameters('loadBalancerName')),'/backendAddressPools/mdbec-lbBackendPool')]"
                }
              ],
              "loadBalancerInboundNatRules": [
                {
                  "id": "[concat(resourceId('Microsoft.Network/loadBalancers', parameters('loadBalancerName')),'/inboundNatRules/',parameters('vmNamePrefix'),'-natRule-max',copyIndex(1))]"
                }
              ]
            }
          }
        ]
      }
    }
   ]
}

 